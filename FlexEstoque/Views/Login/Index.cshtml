@model LoginInicial

@{
    Layout = "_LayoutInicialTela";
    ViewData["Title"] = "Login";

}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">x</button>
        @TempData["MensagemErro"]
    </div>
}

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-controller="login" asp-action="Entrar" method="post">

                    <!-- Login input -->
                    <div class="form-outline mb-4">
                        <input type="text" asp-for="Login" class="form-control form-control-lg"
                               placeholder="Login" />
                        <label for="login" class="form-label">Login</label>
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>

                    <!-- Senha input -->
                    <div class="form-outline mb-3">
                        <input type="password" asp-for="Senha" class="form-control form-control-lg" id="senha"
                               placeholder="Senha" />
                        <label for="senha" class="form-label">Senha</label>
                        @Html.ValidationMessageFor(x => x.Senha)
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                            <label class="form-check-label" for="form2Example3">
                                Lembrar Senha
                            </label>
                        </div>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary">Conectar</button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Esqueceu sua senha? <a href="#!"
                                                      class="link-danger">Clique Aqui.</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

